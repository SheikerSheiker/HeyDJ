    <Style x:Key="ToggleSwitchSetting"
           TargetType="{x:Type ToggleButton}">
        <Setter Property="FocusVisualStyle"
                Value="{StaticResource FocusVisual}" />
        <Setter Property="Background"
                Value="{StaticResource lightBackgroundBrush}" />
        <Setter Property="BorderBrush"
                Value="{StaticResource lightStrokeBrush}" />
        <Setter Property="Foreground"
                Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness"
                Value="2" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="Padding"
                Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <StackPanel>
                        <!--<ContentPresenter x:Name="contentPresenter"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />-->
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                SnapsToDevicePixels="true"
                                CornerRadius="12"
                                Width="50">
                            <Ellipse x:Name="ellipse"
                                     Width="19"
                                     Height="19"
                                     Fill="{StaticResource darkBackgroundBrush}"
                                     StrokeThickness="2"
                                     Stroke="{StaticResource darkStrokeBrush}"
                                     Margin="-20,1,0,1">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="TranslateSwitcher"
                                                        X="0" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!--#region Анимация перевода эллипса в другое положение-->
                        <EventTrigger RoutedEvent="Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TranslateSwitcher"
                                                     Storyboard.TargetProperty="X"
                                                     Duration="0:0:0.25"
                                                     From="0"
                                                     To="20"
                                                     AccelerationRatio="0.5" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource darkBackground}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                    To="{StaticResource darkStroke}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetName="ellipse"
                                                    Storyboard.TargetProperty="Stroke.Color"
                                                    To="{StaticResource lightStroke}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetName="ellipse"
                                                    Storyboard.TargetProperty="Fill.Color"
                                                    To="{StaticResource lightBackground}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="TranslateSwitcher"
                                                     Storyboard.TargetProperty="X"
                                                     Duration="0:0:0.25"
                                                     From="20"
                                                     To="0"
                                                     AccelerationRatio="0.5" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetProperty="Background.Color"
                                                    To="{StaticResource lightBackground}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                    To="{StaticResource lightStroke}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetName="ellipse"
                                                    Storyboard.TargetProperty="Stroke.Color"
                                                    To="{StaticResource darkStroke}" />
                                    <ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetName="ellipse"
                                                    Storyboard.TargetProperty="Fill.Color"
                                                    To="{StaticResource darkBackground}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!--#endregion-->
                        <Trigger Property="Button.IsDefaulted"
                                 Value="true">
                            <Setter Property="BorderBrush"
                                    TargetName="border"
                                    Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{StaticResource Button.Disabled.Background}" />
                            <Setter Property="BorderBrush"
                                    TargetName="border"
                                    Value="{StaticResource Button.Disabled.Border}" />
                            <!--<Setter Property="TextElement.Foreground"
                                    TargetName="contentPresenter"
                                    Value="{StaticResource Button.Disabled.Foreground}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>