<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="mouseEnterBackgroundColor">#FFFFCA5A</Color>
    <Color x:Key="mouseEnterBorderColor">#FFCE6000</Color>
    <Color x:Key="mouseLeaveBackgroundColor">#FFFFD885</Color>
    <Color x:Key="mouseLeaveBorderColor">#FFFF7700</Color>
    
    <SolidColorBrush x:Key="Button.Static.Background"
                     Color="{StaticResource mouseLeaveBackgroundColor}" />
    <SolidColorBrush x:Key="Button.Static.Border"
                     Color="{StaticResource mouseLeaveBorderColor}" />
    
    <SolidColorBrush x:Key="Button.MouseOver.Background"
                     Color="{StaticResource mouseEnterBackgroundColor}" />
    <SolidColorBrush x:Key="Button.MouseOver.Border"
                     Color="{StaticResource mouseEnterBorderColor}" />
    <SolidColorBrush x:Key="Button.Pressed.Background"
                     Color="#FFFFDB8E" />
    <SolidColorBrush x:Key="Button.Pressed.Border"
                     Color="#FFFF7700" />
    <SolidColorBrush x:Key="Button.Disabled.Background"
                     Color="#FFC29A7C" />
    <SolidColorBrush x:Key="Button.Disabled.Border"
                     Color="#FFA59185" />
    <SolidColorBrush x:Key="Button.Disabled.Foreground"
                     Color="#FF6E5C4A" />
</ResourceDictionary>