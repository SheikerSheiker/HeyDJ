    <Grid Background="#FFF1D8A2">
        <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Height="auto"
                    Width="auto">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Save"
                            Margin="10, 5"
                            HorizontalAlignment="Left"
                            Click="Save_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <!--Background="#FFFFD885"-->
                                <Border x:Name="BorderSave"
                                        Background="#FFFFD885"
                                        BorderBrush="#FFCE6000"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Padding="3">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="3"
                                                          Opacity="0.5" />
                                    </Border.Effect>
                                    <StackPanel>
                                        <Image Source="Save.png"
                                               Width="60"
                                               Height="30" />
                                        <TextBlock Text="Save"
                                                   Foreground="#FFFF5300"
                                                   FontSize="20"
                                                   FontWeight="DemiBold"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Effect>
                                                <DropShadowEffect ShadowDepth="2"
                                                                  Opacity="0.5" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                        <Setter TargetName="BorderSave"
                                                Property="Background"
                                                Value="#FFFFCE65" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="Open"
                            HorizontalAlignment="Left"
                            Margin="5"
                            Click="Open_Click">
                        <Button.Effect>
                            <DropShadowEffect Opacity="0.5"
                                              ShadowDepth="3" />
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate>
                                <Border x:Name="BorderLoad"
                                        Background="#FFFFD885"
                                        BorderBrush="#FFCE6000"
                                        BorderThickness="2"
                                        CornerRadius="5"
                                        Padding="3">
                                    <StackPanel>
                                        <Image Source="Load.png"
                                               Width="60"
                                               Height="30" />
                                        <TextBlock Text="Open"
                                                   Foreground="#FFF95100"
                                                   FontSize="20"
                                                   FontWeight="DemiBold"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Effect>
                                                <DropShadowEffect ShadowDepth="2"
                                                                  Opacity="0.5" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                        <Setter TargetName="BorderLoad"
                                                Property="Background"
                                                Value="#FFFFCE65" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <Label HorizontalContentAlignment="Center"
                       HorizontalAlignment="Center"
                       Content="ПатиМейкер"
                       FontSize="48"
                       Foreground="#FFFF7A00"
                       FontWeight="Bold"
                       FontFamily="Berlin Sans FB" />
            </Grid>


            <Grid Margin="10, 0, 10, 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--BEER CONTENT-->
                <Border BorderBrush="#FFFFB971"
                        BorderThickness="5"
                        CornerRadius="25"
                        Background="#FFFFDA95"
                        Grid.Column="0"
                        Margin="0,0, 10, 0">
                    <StackPanel>
                        <!--BeerSlider-->
                        <Slider x:Name="BeerSlider"
                                Width="500"
                                Height="130"
                                Margin="0, 10, 0, 20"
                                Maximum="5"
                                Minimum="0"
                                SmallChange="0.5"
                                Value="2.5"
                                LargeChange="0.5"
                                TickFrequency="0.5"
                                IsSnapToTickEnabled="True"
                                ValueChanged="Slider_ValueChanged">
                            <Slider.Template>
                                <ControlTemplate TargetType="{x:Type Slider}">
                                    <Grid>
                                        <StackPanel VerticalAlignment="Top">
                                            <StackPanel.Effect>
                                                <BlurEffect Radius="1" />
                                            </StackPanel.Effect>
                                            <Polygon Points="20, 40, 478, 32, 480, 34, 480, 42, 478, 44, 22, 44, 20, 42">
                                                <Polygon.Effect>
                                                    <DropShadowEffect ShadowDepth="4"
                                                                      Direction="-135"
                                                                      BlurRadius="5" />
                                                </Polygon.Effect>
                                                <Polygon.Fill>
                                                    <LinearGradientBrush EndPoint="0.5,1"
                                                                         StartPoint="0.5,0">
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <TransformGroup>
                                                                <RotateTransform Angle="-90"
                                                                                 CenterY="0.5"
                                                                                 CenterX="0.5" />
                                                                <TranslateTransform />
                                                            </TransformGroup>
                                                        </LinearGradientBrush.RelativeTransform>
                                                        <GradientStop Color="#FFFFEE00"
                                                                      Offset="0" />
                                                        <GradientStop Color="#FFFF7700"
                                                                      Offset="1" />
                                                    </LinearGradientBrush>
                                                </Polygon.Fill>
                                            </Polygon>
                                        </StackPanel>
                                        <Track Grid.Row="1"
                                               x:Name="PART_Track"
                                               Width="480"
                                               VerticalAlignment="Top">
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="Slider.IncreaseLarge"
                                                              Opacity="0" />
                                            </Track.IncreaseRepeatButton>
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton   Command="Slider.DecreaseLarge"
                                                                Opacity="0" />
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Rectangle Height="46"
                                                                       Width="61">
                                                                <Rectangle.Fill>
                                                                    <ImageBrush ImageSource="Picture/beer.png" />
                                                                </Rectangle.Fill>
                                                            </Rectangle>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                        <UniformGrid Columns="11"
                                                     Width="460"
                                                     VerticalAlignment="Center">
                                            <UniformGrid.Effect>
                                                <DropShadowEffect BlurRadius="0"
                                                                  ShadowDepth="1" />
                                            </UniformGrid.Effect>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="0"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFEB01">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="0.5"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFE301">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="1"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFD901">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="1.5"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFCD01">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="2"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFBE01">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="2.5"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFAF00">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="3"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFFA000">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="3.5"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFF8F01">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
                                                       Text="4"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FFFF8200">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Direction="120"
                                                                      ShadowDepth="1"
                                                                      BlurRadius="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Bottom"
